class Solution {
  public int maximumCount(int[] nums) {
    if (nums[0] > 0 || nums[nums.length - 1] < 0) return nums.length;

    int l = 0, r = nums.length - 1, mid;
    while (l < r) {
      mid = l + (r - l) / 2;
      if (nums[mid] < 0) l = mid + 1;
      else r = mid;
    }

    int neg = l;
	
    l = 0;
    r = nums.length;
    while (l < r) {
      mid = l + (r - l) / 2;
      if (nums[mid] > 0) r = mid;
      else l = mid + 1;
    }
    int pos = nums.length - l;

    return Math.max(neg, pos);
  }
}